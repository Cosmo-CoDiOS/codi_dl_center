{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://codi-dl.planetcom.co.uk/schemas/codi_fw_initial_upload_manifest.json",
    "title": "CoDi Firmware (initial upload) Manifest",
    "description": "CoDi firmware manifest to be included in initial upload to DL center.",
    "type": "object",
    "properties": {
        "firmware": {
            "type": "object",
            "properties": {
                "variant": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "sha512": {
                    "type": "string"
                },
                "vendor": {
                    "type": "string"
                }
            },
            "required": [
                "variant",
                "version",
                "sha512",
                "vendor"
            ]
        }
    },
    "required": [
        "firmware"
    ]
}
