{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codi-dl.planetcom.co.uk/schemas/codi_fw_listing.json",
  "title": "CoDi FW",
  "description": "A firmware entry available for CoDi",
  "type": "object",
  "properties": {
    "downloads": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "variant": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "sha512": {
            "type": "string"
          },
          "vendor": {
            "type": "string"
          }
        },
        "required": [
          "variant",
          "version",
          "url",
          "sha512",
          "vendor"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "downloads"
  ]
}
