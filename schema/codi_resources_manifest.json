{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://codi-dl.planetcom.co.uk/schemas/codi_fw_initial_upload_manifest.json",
    "title": "CoDi resources asset manifest",
    "description": "Manifest included with the CoDi resources (varies)",
    "type": "object",
    "properties": {
        "codiResources": {
            "type": "object",
            "properties": {
                "codiResourcesVersion": {
                    "type": "string"
                },
                "codiResourcesChecksum": {
                    "type": "string"
                },
                "codiResourcesVendor": {
                    "type": "string",
                    "enum": ["PLANET", "CODI_OS"]
                }
            },
            "required": [
                "codiResourcesVersion",
                "codiResourcesChecksum",
                "codiResourcesVendor"
            ]
        }
    },
    "required": [
        "codiResources"
    ]
}
