{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://codi-dl.planetcom.co.uk/schemas/codi_fw_initial_upload_manifest.json",
    "title": "CoDi codi-app asset manifest",
    "description": "Manifest included with the CoDi codi-app",
    "type": "object",
    "properties": {
        "codiApp": {
            "type": "object",
            "properties": {
                "codiAppVersion": {
                    "type": "string"
                },
                "codiAppVendor": {
                    "type": "string",
                    "enum": ["PLANET"]
                }
            },
            "required": [
                "codiAppVersion",
                "codiAppVendor"
            ]
        }
    },
    "required": [
        "codiApp"
    ]
}
